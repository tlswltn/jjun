<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- mapper에 접근할 클래스 명 or 인터페이스 명  -->
<mapper namespace="mapper.BoardMemberMapper">
	<select id="selectAllMember" resultType="dto.BoardMemberDTO" >
		select * from board_member
	</select>
	<insert id="insertMember" parameterType="dto.BoardMemberDTO">
		insert into board_member(id,password,username,nickname) values(#{id},standard_hash(#{password},'SHA512'),#{userName},#{nickName})
	</insert>
	<select id="selectNameMember" parameterType="string" resultType="dto.BoardMemberDTO">
		select * from board_member where username like '%' || #{name} || '%'
	</select>
	<delete id="deleteMember" parameterType="String">
	delete from board_member where id = #{id}
	</delete>
	<select id="checkMemberId" parameterType="dto.BoardMemberDTO" resultType="int">
	select count(*) from board_member where id = #{id}
	</select>
</mapper>